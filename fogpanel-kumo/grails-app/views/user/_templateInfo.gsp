<div class="row-fluid">
  <div id="main-stats">
    <div class="row-fluid stats-row">
       <div class="span4 stat">
            <div class="data">
                <span class="number" id="linuxCount"></span>
               <g:message code="stat.linux.osTemplate"/>
            </div>
           
        </div>
        <div class="span4 stat">
            <div class="data">
              <span class="number" id="windowsCount"></span>
                <g:message code="stat.windows.osTemplate"/>
            </div>           
        </div>
        <div class="span4 stat">
            <div class="data">
              <span class="number" id="appTempCount"></span>
               <g:message code="stat.appTemplate"/>
            </div>            
        </div>     
    </div>
</div>
</div>