        </snapshotRepository>
    </distributionManagement>
    
    <developers>
        <developer>
            <name>Gowtham R</name>
            <email>gowtham@assistanz.com</email>
            <organization>AssistanZ Networks Pvt Ltd</organization>
            <timezone>+5.5</timezone>
        </developer>
    </developers>
    
    <licenses>
        <license>
            <name>AssistanZ Propreitory License</name>
            <url>http://www.assistanz.com/licenses/az</url>
        </license>
    </licenses>
    
    <ciManagement>
        <url>http://track.assistanz.com:3030/job/cloudstack-api/</url>
        <system>Jenkins</system>
        <notifiers>
            <notifier>
                <address>cloudstack-api-build@projects.fogpanel.com</address>
                <sendOnFailure>true</sendOnFailure>
            </notifier>
        </notifiers>
