    <artifactId>cloudstack-api</artifactId>
    <version>1.1.0-SNAPSHOT</version>
    <packaging>jar</packaging>
    <inceptionYear>2013</inceptionYear>
    <description>Cloudstack API Wrappers for 4.3.x</description>
