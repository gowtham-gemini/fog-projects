        <maven.compiler.source>1.7</maven.compiler.source>
        <maven.compiler.target>1.7</maven.compiler.target>
    </properties>
    
    <issueManagement>
        <url>http://jira.fogpanel.com/browse/CACL</url>
        <system>JIRA</system>
    </issueManagement>
    
    <scm>
        <url>https://git.assistanz.com/fogpanel/cloudstack-connector-api.git</url>
        <developerConnection>scm:git:[fetch=]https://git.assistanz.com/fogpanel/cloudstack-connector-api.git[push=]git@git.assistanz.com:repositories/fogpanel/cloudstack-connector-api.git</developerConnection>
